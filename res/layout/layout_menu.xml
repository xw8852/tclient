<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="VBOX连接状态" />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:src="@drawable/connect_h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="切换连接设备" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:src="@drawable/connect_h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="盒子配置信息" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:src="@drawable/connect_h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="用户信息" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:src="@drawable/connect_h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="退出遥控器" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:src="@drawable/connect_h" />
</LinearLayout>